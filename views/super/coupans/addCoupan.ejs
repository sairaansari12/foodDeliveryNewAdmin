<!DOCTYPE html>
<html lang="en">
<%- include('../partials/header'); -%>



</style>
<body class="loading"
    data-layout='{"mode": "light", "width": "fluid", "menuPosition": "fixed", "sidebar": { "color": "light", "size": "default", "showuser": false}, "topbar": {"color": "dark"}, "showRightSidebarOnPageLoad": true}'>
    <!-- Begin page -->
    <div id="wrapper">
        <%- include('../partials/dashboardHeader'); -%>
            <div class="content-page">
                <div class="content">
                    <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box">
                                    <h4 class="page-title">Add Coupon</h4>
                                </div>
                            </div>
                        </div>     
                        <!-- end page title --> 
                    <!-- Start Content-->
                    
                    <div class="container-fluid">
                    <form  role="form" onsubmit="return false"  class="col-md-12"  id="adduser" >
                    <input type="hidden"  name="parentId" id="parentId"   />
                        <div class="row">
                              
                              
                                <div class="col-lg-6">
                                    <div class="card-box">
                                        <h5 class="text-uppercase bg-light p-2 mt-0 mb-3" id="catName">General</h5>

                                        <div class="form-group mb-3">
                                            <label for="product-name">Coupon Name <span class="text-danger">*</span></label>
                                            <input type="text" id="name" autocomplete="off"  minlength="2" maxlength="100" name="name" class="form-control" placeholder="Coupon Name">
                                        </div>

                                        <div class="form-group mb-3">
                                            <label for="product-name">Coupon Code <span class="text-danger">*</span></label>
                                            <input type="text" id="code"  autocomplete="off" minlength="2" maxlength="30" name="code" class="form-control" placeholder="Coupon Code">
                                        </div>

                                        <div class="form-group mb-3">
                                            <label for="product-name">Coupon Discount (%) <span class="text-danger">*</span></label>
                                            <input type="number" id="discount" name="discount" class="form-control" placeholder="Coupon Discount (%)">
                                        </div>

                                        <div class="form-group mb-3">
                                            <label>Due Date <span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" id="validupto" name="validupto" placeholder="Coupon Valid">
                                        </div>

                                      
                                            


                                        <h5 class="text-uppercase bg-light p-2 mt-0 mb-3" id="catName">Specifications</h5>
                                       
                                        <div class="form-group  mb-3">
                                            <label for="product-category">Type <span class="text-danger">*</span></label>
                                            <select class="form-control chosen" id="type" name="type">
                                                <option value="0" />All 
                                                <%for(var p=0;p<types.length;p++){%>
                                                    <option value="<%-types[p].id%>" ><%-types[p].userType%></option> 
                                                <%}%>
                                            </select>
                                        </div>
 

                                        <div class="form-group  mb-3">
                                            <label for="product-name">Coupon Usage Limit <span class="text-danger">*</span></label>
                                            <input type="number" id="usageLimit" name="usageLimit" class="form-control" placeholder="Coupon Usage Limit">
                                       </div>

                                        <div class="form-group  mb-3">
                                            <label for="product-name">Minimum Order Amount <span class="text-danger">*</span></label>
                                            <input type="number" id="minimumAmount"  name="minimumAmount" class="form-control" placeholder="Minimum Order Amount">
                                        </div>
                                 
                                    </div>
                                    </div>


                                    <div class="col-lg-6">
                                        <div class="card-box">
                                  
                                    
                                            <h5 class="text-uppercase bg-light p-2 mt-0 mb-3" id="catName">Coupon Image</h5>

                                            <div     onclick="document.getElementById('icon').click()" class="dropzone" id="myAwesomeDropzone" data-plugin="dropzone" data-previews-container="#file-previews"
                                            data-upload-preview-template="#uploadPreviewTemplate">
                                            <div class="fallback">
                                                <input name="icon"   style="display:none" id="icon"  type="file"  />
                                            </div>
    
                                            <div class="dz-message needsclick">
                                                <i class="h1 text-muted dripicons-cloud-upload"></i>
                                                <h4>Click here to upload.</h4>
                                                <span class="text-muted font-13">(This is product image. Selected files 
                                                    <strong>will</strong> uploaded )</span>
                                            </div>
    
                                         
    
                                        </div>
    
                                        <!-- Preview -->
                                        <div class="dropzone-previews mt-3" id="file-previews">
                                            <img  class="avatar-title"  id="myIcon"  alt="">
                                        </div>
                                      
                                            <!-- Date View -->
                                      
                                            <h5 class="text-uppercase bg-light p-2 mt-0 mb-3" id="catName">Coupon usage description</h5>

                                        <div class="form-group  mb-3">
                                            <label for="product-description">Coupon Description <span class="text-danger">*</span></label>
                                            <textarea class="form-control" name="description"  id="product-description" rows="15" placeholder="Please enter description"></textarea>
                                        </div>


                                </div> <!-- end card-box -->
                            </div> <!-- end col -->
                                          </div>
                                          </div>

                                          </div>
                        <!-- end row -->

                 
                            <div class="col-12">
                                <div class="text-center mb-3">
                                    <a href="<%- superadminpath %>coupans"><button type="button" class="btn w-sm btn-light waves-effect">Cancel</button></a>
                                    <button type="submit" class="btn w-sm btn-success waves-effect waves-light">Save</button>
                                </div>
                            </div> <!-- end col -->
                   
                        <!-- end row -->
                    </form>
                    </div> <!-- container -->

                </div> <!-- content -->
            </div>
                
</div>
                
    <!-- END wrapper -->

    <%- include('../partials/script'); -%>
    <%- include('../partials/commonJs'); -%>
    <script>
    $(function() { 
        $('#sidebar-menu ul li').find('a[href*="<%-superadminpath%>coupans"]').parent().addClass('menuitem-active');
        $('#sidebar-menu ul li a[href^="<%-superadminpath%>coupans"]').addClass('active');
    });
    $("#validupto").flatpickr({minDate: "today"});
    $('#name').on('keypress', function (event) {
        var regex = new RegExp("^[a-zA-Z0-9_ ]*$");
        var key = String.fromCharCode(!event.charCode ? event.which : event.charCode);
        if (!regex.test(key)) {
           event.preventDefault();
           return false;
        }
    });
    $("#adduser").validate({
        rules: {
            name: {
              required: true
            },
            code: {
              required: true
            },
            discount: {
                required: true
            },
            
            type: {
                required: true
            },
            usageLimit: {
                required: true
            },
            minimumAmount: {
                required: true
            },
            validupto: {
                required: true
            },
            description: {
                required: true
            },
            icon: { required: true, accept: "image/jpg,image/jpeg,image/png,image/gif"},

        },
        messages: {
            name: {
                required: "This field is required"
            },
            code: {
                required: "This field is required"
            },
            discount: {
                required: "This field is required."
            },
           
            type: {
                required: "This field is required"
            },
            usageLimit: {
              required: "This field is required"
            },
            minimumAmount: {
              required: "This field is required"
            },
            validupto: {
              required: "This field is required"
            },
            description: {
              required: "This field is required"
            },
            icon: {required: "This field is required", accept: 'Not an image!'},
        },
        submitHandler: function (form) {

            var textareaValue = $('#product-description').summernote('code').replace(/<\/?[^>]+(>|$)/g, "");
            if(textareaValue=="")
            showToastError("Please enter description")
else  {
   var  ext = $('#icon').val().split('.').pop().toLowerCase();

if($.inArray(ext, ['gif','png','jpg','jpeg']) == -1) {
showToastError('Please select only jpg and png files for image!')
return false;
}


            else{

            var tempform = $('#adduser');
            var form_data = new FormData(tempform[0]);
            $("#loading1").show();
            $.ajax({
                type: 'POST',
                url: '<%-superadminpath%>coupans/add',
                dataType: 'json',
                data: form_data,
                contentType:false,
                cache:false,
                processData:false,
                success: function (response) {
                    $("#loading").hide();
                    if (response.code == 200) {
                         toastr.success(response.message);
                        setTimeout(function(){
                            window.location.href="<%-superadminpath%>coupans";
                        }, 2000);
                       
                    } else {
                        toastr.error(response.message);
                        //showToastError(response.message)
                    }
                },
                error: function(response)
                {
                    $('#loading1').hide()

                   var errorResponse=JSON.parse(response.responseText)
                   showToastError(errorResponse.message)


                }
            
            });
        }
        
    }
}
    });


   $("#icon").change(function() {
  readURL(this,'myIcon');
});

    </script>
</body>

</html>