<!DOCTYPE html>
<html lang="en">
<%- include('../partials/header'); -%>

<body class="loading"
    data-layout='{"mode": "light", "width": "fluid", "menuPosition": "fixed", "sidebar": { "color": "light", "size": "default", "showuser": false}, "topbar": {"color": "dark"}, "showRightSidebarOnPageLoad": true}'>
    <!-- Begin page -->
    <div id="wrapper">
        <%- include('../partials/dashboardHeader'); -%>
        
        <!-- ============================================================== -->
            <!-- Start Page Content here -->
            <!-- ============================================================== -->

            <div class="content-page">
                <div class="content">

                    <!-- Start Content-->
                    <div class="container-fluid">
                        
                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box">
                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <li class="breadcrumb-item"><a href="javascript: void(0);">DashBoard</a></li>
                                            <li class="breadcrumb-item active">Pricing</li>
                                        </ol>
                                    </div>
                                    <h4 class="page-title">Pricing</h4>
                                </div>
                            </div>
                        </div>     
                        <!-- end page title --> 


                        <div class="row justify-content-center">
                            <div class="col-xl-10">

                                <div class="card mb-2">
                                    <div class="card-body">
                                        <div class="row">
                                           
                                            <div class="col-lg-12">
                                                <div class="form-group float-right">
                                                    <div class="text-lg-right">
                                                        <a href="<%- superadminpath %>subscription/add"><button type="button" class="btn btn-danger waves-effect waves-light"><i class="mdi mdi-plus-circle mr-1"></i> Add New Plan</button></a>
                                                    </div>
                                                </div>
                                                <h4 class="page-title">Our Plans</h4>
                                            </div>
                                            <!-- end col-->
                                        </div> <!-- end row -->
                                    </div> <!-- end card-body-->
                                </div> <!-- end card-->

                                <!-- Plans -->
                                <div class="row my-3">
                                    <% for(var i=0;i<findData.length;i++){ %>
                                    <div class="col-md-4">
                                        <div class="card card-pricing">
                                            <div class="card-body text-center">
                                                <p class="card-pricing-plan-name font-weight-bold text-uppercase"><%= findData[i].name %></p>
                                                <span class="card-pricing-icon text-primary">
                                                    <i class="fe-users"></i>
                                                </span>
                                                <h2 class="card-pricing-price"><%- findData[i].price %> <span>/ Month</span></h2>
                                                <ul class="card-pricing-features">
                                                    <% for(var li=0;li<findData[i].features.length;li++){ %>
                                                        <li><%- findData[i].features[li] %></li>
                                                    <% } %>
                                                </ul>
                                                <a href="<%- superadminpath %>subscription/view/<%- findData[i].id %>"><button type="button" class="btn btn-primary waves-effect waves-light mt-4 mb-2 width-sm">Update</button></a>
                                            </div>
                                        </div> <!-- end Pricing_card -->
                                    </div> <!-- end col -->
                                    <% } %>
                                </div>
                                <!-- end row -->

                            </div> <!-- end col-->
                        </div>
                        <!-- end row -->
                        
                    </div> <!-- container -->

                </div> <!-- content -->
            </div>

            <!-- ============================================================== -->
            <!-- End Page content -->
            <!-- ============================================================== -->
                
</div>
                
    <!-- END wrapper -->

    <%- include('../partials/script'); -%>
    <%- include('../partials/commonJs'); -%>

</body>

</html>