<!DOCTYPE html>
<html lang="en">
<%- include('../partials/header'); -%>

<body class="loading">
    <!-- Begin page -->
    <div id="wrapper">
        <%- include('../partials/dashboardHeader'); -%>
    <!-- ============================================================== -->
            <!-- Start Page Content here -->
            <!-- ============================================================== -->

            <div class="content-page">
                <div class="content">

                    <!-- Start Content-->
                    <div class="container-fluid">
                        
                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box">
                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <li class="breadcrumb-item"><a href="<%- adminpath %>">Dashboard</a></li>
                                            <li class="breadcrumb-item"><a href="javascript: void(0);">Order Setting</a></li>
                                            <li class="breadcrumb-item active">Tip</li>
                                        </ol>
                                    </div>
                                    <h4 class=form-label">Tips</h4>
                                </div>
                            </div>
                        </div>     
                        <!-- end page title --> 


                        <div class="row">
                            <form  role="form" onsubmit="return false"  class="col-md-12"  id="adduser" >
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="card-box">
                                            <% for(var i =0;i<inst.length;i++){ %>
                                            <div class="row after-add-more">
                                                <div class="form-group  col-md-4 mb-3">
                                                    <label for="product-name">Add Tip <span class="text-danger">*</span></label>
                                                    <input type="number" id="tip[]" value="<%- inst[i] %>" autocomplete="off"  minlength="1" maxlength="100" name="tip" class="form-control" placeholder="Add Tip">
                                                </div>
                                                <% if(i != 0){ %>
                                                    <div class="text-center form-group" style="margin-top: 28px;">
                                                        <button type="button" class='btn w-sm btn-danger remove waves-effect waves-light form-control'>- Remove</button>
                                                    </div>
                                                    
                                                <% } %>
                                            </div>

                                            <% } %>
                                            <div class="newinputs">
                                            </div>
                                            <div class="col-md-2">
                                                <div class="form-group change">
                                                    <label for="">&nbsp;</label><br/>
                                                    <button type="button" class="btn w-sm btn-success  waves-effect waves-light add-more">+ Add More</button>
                                                </div>
                                            </div>
                                        </div> <!-- end card-box -->
                                    </div> <!-- end col -->
                                    
                                </div>
                                <!-- end row -->

                                <div class="row">
                                    <div class="col-12">
                                        <div class="text-center mb-3">
                                            <a  href="javascript:void(0);:" onclick="window.history.back()" ><button type="button" class="btn w-sm btn-light waves-effect">Cancel</button></a>
                                            <button type="submit" class="btn w-sm btn-success waves-effect waves-light">Save</button>
                                        </div>
                                    </div> <!-- end col -->
                                </div>
                            <!-- end row -->
                            </form>
                        </div>
                        <!-- end row -->
                    </div> <!-- container -->
                </div> <!-- content -->
            </div>

            <!-- ============================================================== -->
            <!-- End Page content -->
            <!-- ============================================================== -->              
                
</div>

    <!-- END wrapper -->
    <!-- Right bar overlay-->
    <div class="rightbar-overlay"></div>
    <%- include('../partials/script'); -%>
    <%- include('../partials/commonJs'); -%>
<script>
    $("body").on("click",".remove",function(){ 
        $(this).parents(".after-add-more").remove();
    });
    jQuery(document).ready( function () {                                 
        $(".add-more").click( function(e) {
             e.preventDefault();
            $(".newinputs").append('<div class="row after-add-more">\
                <div class="form-group  col-md-4 mb-3">\
                <label for="product-name">Add Tip <span class="text-danger">*</span></label>\
                <input type="number" id="tip[]" autocomplete="off"  minlength="1" maxlength="100" name="tip" class="form-control" placeholder="Add Tip">\
                </div><div class="text-center form-group" style="margin-top: 28px;">\
                <button type="button" class="btn w-sm btn-danger remove waves-effect waves-light form-control remove_this">- Remove</button>\
                </div></div>');
            return false;
        });
    });
    jQuery(document).on('click', '.remove_this', function() {
       $(this).parents(".newinputs").remove();
        return false;
    });
    $(document).ready(function(){

        $("#adduser").validate({
            rules: {
                tip: {
                  required: true
                }
            },
            messages: {
                tip: {
                    required: "This field is required"
                }
            },
            submitHandler: function (form) {
     
                $(".overlay").show();
                var tempform = $('#adduser');
                var form_data = new FormData(tempform[0]);
                console.log(form_data);
                $(".overlay").show();
                $.ajax({
                    type: 'POST',
                    url: '<%-adminpath%>ordersetting/addtip',
                    dataType: 'json',
                    data: form_data,
                    contentType:false,
                    cache:false,
                    processData:false,
                    success: function (response) {
                        $(".overlay").hide();
                        if (response.code == 200) {
                            toastr.success("Order Tips updated  successfully!");
                            setTimeout(function(){
                               window.location.reload();
                            }, 2000);
                            //showToastSuccess(response.message)
                        } else {
                            setTimeout(function(){
                              toastr.success(response.message);
                            }, 2000);
                        }
                    }
                });
            }
            
        });
    });
</script>
</body>

</html>