<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/header'); -%>

    <body class="loading">

        <!-- Begin page -->
        <div id="wrapper">

            <%- include('../partials/dashboardHeader'); -%>


            <div class="content-page">
                <div class="content">

                    <!-- Start Content-->
                    <div class="container-fluid">
                        
                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box">
                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <li class="breadcrumb-item"><a href="javascript: void(0);">Delicio</a></li>
                                            <li class="breadcrumb-item"><a href="javascript: void(0);">eCommerce</a></li>
                                            <li class="breadcrumb-item active">Product Edit</li>
                                        </ol>
                                    </div>
                                    <h4 class="page-title pb-1"><a  href="javascript:;" onclick="window.history.back()";> <i class="mdi mdi-backburger "></i> </a> Edit Product</h4>
                                </div>
                            </div>
                        </div>     
                        <!-- end page title --> 


                        <form  role="form"  onsubmit="return false"  id="addCat"   enctype="multipart/form-data">
                            <input type="hidden" id="serviceId" value="<%-data.id%>" name="serviceId" >

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="card-box">
                                    <h5 class="text-uppercase bg-light p-2 mt-0 mb-3" id="catName">General</h5>

                                    <div class="form-group mb-3">
                                        <label for="product-name">Product Name <span class="text-danger">*</span></label>
                                        <input type="text" id="serviceName"  value="<%-data.name%>" name="serviceName" class="form-control" placeholder="e.g : Pizza Paneer">
                                    </div>

                                    <!-- <div class="form-group mb-3">
                                        <label for="product-reference">Item Type <span class="text-danger">*</span></label>
                                        <select onchange="itemTypeFilter()" class="custom-select" id="itemtype" name="itemtype">
                                            <option value="0">Veg</option>
                                            <option value="1">Non Veg</option>
                                           

                                        </select>                                    </div> -->


                                        <div class="form-group mb-3 ">
                                            <label class="mb-2">Item Type <span class="text-danger">*</span></label>
                                            <br/>
                                            <div class="ml-1 radio form-check-inline">
                                                <input type="radio" id="itemtype"   value="0" name="itemtype"  <%if(data.itemType==0){%>checked="" <%}%>>
                                                <label for="inlineRadio1"> Veg </label>
                                            </div>
                                            <div class="radio form-check-inline">
                                                <input type="radio" id="itemtype" value="1" name="itemtype" <%if(data.itemType==1){%>checked="" <%}%>>
                                                <label for="inlineRadio2"> Non Veg </label>
                                            </div>
                                            
                                        </div>
    



                                        <div class="form-group mb-3">
                                            <label for="product-description">Product Description <span class="text-danger">*</span></label>
                                            <textarea class="form-control" name="description"  id="product-description" rows="5" placeholder="Please enter description"><%-data.description%></textarea>
                                        </div>

                                    <div class="form-group mb-3">
                                        <label for="product-price">Duration <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" value="<%-data.duration%>"  name="duration" id="duration"   placeholder="e.g : 20 Mins">
                                    </div>


                                    <div class="form-group mb-3">
                                        <label for="product-price">Price <span class="text-danger">*</span></label>
                                        <input type="number" min="1"  class="form-control" value="<%-data.originalPrice%>"  name="originalPrice"  id="originalPrice" placeholder="Enter amount">
                                    </div>


                                  
                                    <div class="form-group mb-0">
                                        <label>Included  Services</label>
                                        <textarea class="form-control" rows="3" value="<%-data.includedServices%>" name="includedServices" id="includedServices "  placeholder="Please enter comment"></textarea>
                                    </div>

                                
                                    <div class="form-group mb-0">
                                        <label>Excluded Services</label>
                                        <textarea class="form-control" rows="3"   value="<%-data.excludedServices%>"name="excludedServices" id="excludedServices"  placeholder="Please enter comment"></textarea>
                                    </div>

                                   
                                </div> <!-- end card-box -->
                            </div> <!-- end col -->

                            <div class="col-lg-6">
                                
                                <div class="card-box">
                                    <h5 class="text-uppercase mt-0 mb-3 bg-light p-2">Product Images</h5>

                                    <div     onclick="document.getElementById('thumbnail').click()" class="dropzone" id="myAwesomeDropzone" data-plugin="dropzone" data-previews-container="#file-previews"
                                        data-upload-preview-template="#uploadPreviewTemplate">
                                        <div class="fallback">
                                            <input name="thumbnail"   style="display:none" id="thumbnail"  type="file"  />
                                        </div>

                                        <div class="dz-message needsclick">
                                            <i class="h1 text-muted dripicons-cloud-upload"></i>
                                            <h4>Click here to upload.</h4>
                                            <span class="text-muted font-13">(This is product image. Selected files 
                                                <strong>will</strong> uploaded )</span>
                                        </div>

                                     

                                    </div>

                                    <!-- Preview -->
                                    <div class="dropzone-previews mt-3" id="file-previews">
                                        <img    <% if (data.thumbnail =="") {%> style="display :none"  <%}%>  src="<%=data.thumbnail%>" class="avatar-title"  id="myIcon"  alt="">
                                    </div>
                                </div> <!-- end col-->

                                <div class="card-box">
                                    <h5 class="text-uppercase mt-0 mb-3 bg-light p-2">Offer Description</h5>

                                    <div class="form-group mb-3">
                                        <label for="product-price">Offer(%) </label>
                                        <input type="number"   value="<%-data.offer%>" value="0" min="0"  class="form-control" name="offer" id="offer"   placeholder="Enter Offer">
                                    </div>



                                    <div class="form-group mb-3">
                                        <label for="product-price">Offer Name </label>
                                        <input type="text"  value="<%-data.offerName%>" class="form-control" name="offerName" id="offerName"   placeholder="Enter Offer Name">
                                    </div>


                                    <div class="form-group mb-3">
                                        <label for="product-price">Offer Expiry </label>
                                        <input type="text"  value="<%-data.validUpto%>" id="basic-datepicker" name="validUpto" class="form-control" placeholder="Offer expiry date">
                                    </div>


                                    <div class="form-group mb-3">
                                        <label for="product-price">Net Price <span class="text-danger">*</span></label>
                                        <input type="text"  value="<%-data.price%>" class="form-control" name="price" id="price" readonly placeholder="Enter amount">
                                    </div>

                                </div> <!-- end card-box -->

                            </div> <!-- end col-->
                        </div>
                        <!-- end row -->

                        <div class="row">
                            <div class="col-12">
                                <div class="text-center mb-3">
                                    <button type="button"  onclick="window.history.back()";  class="btn w-sm btn-light waves-effect">Cancel</button>
                                    <button type="submit" class="btn w-sm btn-success waves-effect waves-light">Save</button>
                                    <button type="button" onclick="resetForm()" class="btn w-sm btn-danger waves-effect waves-light">Delete</button>
                                </div>
                            </div> <!-- end col -->
                        </div>
                      

</form>
                       

                        
                    </div> <!-- container -->

                </div> <!-- content -->

                <!-- Footer Start -->
                <footer class="footer">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-6">
                                2015 - <script>document.write(new Date().getFullYear())</script> &copy; Delicio theme by <a href="">Coderthemes</a> 
                            </div>
                            <div class="col-md-6">
                                <div class="text-md-right footer-links d-none d-sm-block">
                                    <a href="javascript:void(0);">About Us</a>
                                    <a href="javascript:void(0);">Help</a>
                                    <a href="javascript:void(0);">Contact Us</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </footer>
                <!-- end Footer -->

            </div>

            <!-- ============================================================== -->
            <!-- End Page content -->
            <!-- ============================================================== -->


        </div>
        <!-- END wrapper -->

        <!-- Right Sidebar -->
        <%- include('../partials/rightBar'); -%>

        <!-- /Right-bar -->

        <!-- Right bar overlay-->
        <div class="rightbar-overlay"></div>

        
        <%- include('../partials/script'); -%>
        <%- include('../partials/commonJs'); -%>

        <script>

function resetForm() {
    $('#addCat').trigger("reset");
}
function readURL(input) {
  if (input.files && input.files[0]) {
    var reader = new FileReader();
    
    reader.onload = function(e) {
        $('#myIcon').show()

      $('#myIcon').attr('src', e.target.result);
    }
    
    reader.readAsDataURL(input.files[0]); // convert to base64 string
  }
}

$("#thumbnail").change(function() {
  readURL(this);
});





$("#originalPrice").change(function(){

var newval=$("#originalPrice").val()
var offer=$("#offer").val()
if(offer && offer!="" && offer>0)
 newval=newval-(parseFloat(newval)*offer)/100
$("#price").val(newval)
});

$("#offer").change(function(){

    var newval=$("#originalPrice").val()
var offer=$("#offer").val()
if(offer && offer!="" && offer>0)
 newval=newval-(parseFloat(newval)*offer)/100
$("#price").val(newval)
});



$("#addCat").validate({
        rules: {
            serviceName: {
              required: true
            },
            
        
            duration: {
              required: true
            },
            originalPrice: {
              required: true
            },
            price: {
              required: true
            },


            thumbnail: { required: true, accept: "image/jpg,image/jpeg,image/png,image/gif"},

        },
        messages: {
            serviceName: {
                required: "This field is required"
            },

        
            duration: {
                required: "This field is required"
            },

            originalPrice: {
                required: "This field is required"
            },
            price: {
                required: "This field is required"
            },

            thumbnail: {required: "This field is required", accept: 'Not an image!'},
        },
        submitHandler: function (form) {

            var textareaValue = $('#product-description').summernote('code').replace(/<\/?[^>]+(>|$)/g, "");
            if(textareaValue=="")
            showToastError("Please enter description")
else  {
    var ext1 = $('#thumbnail').val().split('.').pop().toLowerCase();
             console.log(ext1)
                if(ext1==null || ext1=="") ext1=$('#myIcon').attr('src').split('.').pop().toLowerCase();


                if($.inArray(ext1, ['gif','png','jpg','jpeg']) == -1     ) {
               showToastError('Please select only jpg and png files for image!')
                return false;
}


            else{
            var tempform = $('#addCat');
            var form_data = new FormData(tempform[0]);
            $("#loading1").show();
            $.ajax({
                type: 'POST',
                url: '<%-adminpath%>products/update',
                dataType: 'json',
                data: form_data,
                contentType:false,
                cache:false,
                processData:false,
                success: function (response) {
                    $("#loading1").hide();
                    if (response.code == 200) {
                  
                     showToastSuccess(response.message)

                     setTimeout(function() {
                         var id=$('#serviceId').val()
                       window.location.href="<%-adminpath%>/products/";

        }, 500);
                       
                    } else {

                        showToastError(response.message)
                    }
                },
                error: function(response)
                {
                    $('#loading1').hide()

                   var errorResponse=JSON.parse(response.responseText)
                   showToastError(errorResponse.message)


                }
            });
        }
        
    }
}
    });
  






        </script>
       
        
    </body>
</html>