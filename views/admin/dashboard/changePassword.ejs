        $("#changePassword").validate({
            rules: {
                oldPassword: {
                    required: true
                },
                newPassword: {
                    required: true,
                    maxlength: 30,
                    minlength:6,
                    pwcheck: true
                },
                confirmPassword: {
                    required: true,
                    equalTo: "#newPassword"
                }
            },
            messages: {
                oldPassword: {
                    required: "Enter Old password."
                },
                newPassword: {
                    required: "Enter New Password",
                    maxlength: "Password should not be greater than 30 characters",
                    minlength: "Password should be atleast six characters"
                },
                confirmPassword: {
                    required: "Enter Confirm Password",
                    equalTo: "Confirm Password Should Be Same As New Password"
                }
            },
            submitHandler: function (form) {
                var tempform = $('#changePassword');
                var form_data = new FormData(tempform[0]);

                $(".overlay").show();
                $.ajax({
                    type: 'POST',
                    url: '<%=adminpath %>changePassword',
                    dataType: 'json',
                    data: form_data,
                    contentType:false,
                    cache:false,
                    processData:false,
                    success: function (response) {
                        if(response.code == 200){
                            setTimeout(function(){
                                $(".overlay").hide();
                                toastr.success("Password Changed!");
                            }, 2000);

                            $(".changePassword")[0].reset();

                        }else{
                            setTimeout(function(){
                                $(".overlay").hide();
                                toastr.error(response.message);
                            }, 2000);
                        }
                    }
                });
            }
            
        });
    });



