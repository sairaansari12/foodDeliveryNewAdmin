<!DOCTYPE html>
<html lang="en">
<%- include('../partials/header'); -%>

<body class="loading">
    <!-- <div class="login-logo">
        <a href="<%-adminpath%>/"><b>Food</b>Delivery</a>
      </div> -->
    <!-- Begin page -->
    <div id="wrapper">
        <%- include('../partials/dashboardHeader'); -%>
        <div class="content-page">
            <div class="content">

                <!-- Start Content-->
                <div class="container-fluid">

                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box">
                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="<%- adminpath %>">Dashboard</a></li>
                                        
                                        <li class="breadcrumb-item">Settings</li>

                                        <li class="breadcrumb-item active">Banners</li>
                                    </ol>
                                </div>
                                <h4 class=form-label">Banners</h4>
                            </div>
                        </div>
                    </div>     
                    <!-- end page title --> 

                    <div class="row">
                        <div class="col-12">
                            <div class="card">

                        <div class="card-body">

                            <p class="text-right">
                                <a class="btn btn-info btn-sm" href="<%=adminpath%>banner/add">Add New Banner</a>
                            </p>

                    <table id="data-table-command" class="table table-striped table-vmiddle">
                        <thead>
                            <tr>
                                <th data-column-id="id" data-visible="false">ID</th>
                                <th data-column-id="commandsStatus">Banner</th>
                                <th data-column-id="name">Name</th>
                                <th data-column-id="Status">Status</th>
                                <th data-column-id="Registered At">Registered At</th>
                                <th data-column-id="commands" data-formatter="commands" data-sortable="false">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var t=0;t<data.length;t++) { %>
                                <tr>
                                    <td><%-t+1 %></td>
                                    <td>
                                        <a href="<%=data[t].url %>" class="image-popup" title="Screenshot-1">
                                        <img class="img-fluid" src="<%=data[t].url %>" alt="">
                                    </a>
                                    </td>

                                    <td><%-data[t].name %></td>
                                    <% if(data[t].status == '1'){ %>
                                        <td>Active</td>
                                    <% }else{ %>
                                        <td>Block</td>
                                    <% } %>
                                    <td><%-commonMethods.format(new Date(data[t].createdAt*1000)) %></td>
                                    <td><button class="btn btn-danger btn-sm delete" data-id="<%=data[t].id %>">Delete</button>
                                        <button class="btn btn-primary btn-sm edit" data-id="<%=data[t].id %>">Edit</button>
                                    </td>
                                    

                                </tr>
                            <%}%>
                        </tbody>
                    </table>
                     </div>
                    </div>
                    </div>
                    </div>

                </div> <!-- container -->

            </div> <!-- content -->

            <!-- Footer Start -->
            <%- include('../partials/footer'); -%>

            <!-- end Footer -->

        </div>

        <!-- ============================================================== -->
        <!-- End Page content -->
        <!-- ============================================================== -->


    </div>
   
    <!-- /Right-bar -->

    <!-- Right bar overlay-->
    <div class="rightbar-overlay"></div>



    <%- include('../partials/script'); -%>
    <%- include('../partials/commonJs'); -%>


    <script>

        $("#data-table-command").DataTable();

        $(".delete").click(function(){

            var id = $(this).data("id");
            alert(id)

            if(confirm("Are you sure you want to delete this item ?")){
                $.ajax({
                    url: '<%=adminpath %>banner/delete/'+id,
                    type: 'GET',
                    success: function(data){
                        toastr.success("Deleted SuccessFully");
                        location.reload();
                    }
                })
            }
        });
   
        $(".edit").click(function(){

var id = $(this).data("id");
window.location.href="<%=adminpath %>banner/view/"+id

    
});

   
   
   </script>


</body>

</html>