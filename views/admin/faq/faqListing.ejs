<!DOCTYPE html>
<html lang="en">
<%- include('../partials/header'); -%>


<body class="loading">
    <!-- Begin page -->
    <div id="wrapper">
        <%- include('../partials/dashboardHeader'); -%>
            <!-- ============================================================== -->
            <!-- Start Page Content here -->
            <!-- ============================================================== -->

            <div class="content-page">
                <div class="content">
                    <!-- Start Content-->
                    <div class="container-fluid">
                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box">
                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <li class="breadcrumb-item"><a href="javascript: void(0);">Dashboard</a></li>
                                            <li class="breadcrumb-item active">FAQs</li>
                                        </ol>
                                    </div>
                                    <h4 class=form-label">FAQs</h4>
                                </div>
                            </div>
                        </div>     
                        <!-- end page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="text-center">
                                    <i class="h1 mdi mdi-comment-multiple-outline text-muted"></i>
                                    <h3 class="mb-3">Frequently Asked Questions</h3>    
                                    <button type="button" class="btn btn-danger waves-effect waves-light mt-2" data-toggle="modal" data-target="#custom-modal"><i class="mdi mdi-plus-circle mr-1"></i>  Add New FAQs</button>
                                    <button type="button" class="btn btn-info waves-effect waves-light mt-2" data-toggle="modal" data-target="#custom-modal-category"><i class="mdi mdi-plus-circle mr-1"></i>  Add New FAQs</button>

                                </div>
                            </div><!-- end col -->
                        </div><!-- end row -->

                       


                        
                        <div class="row pt-5">
                            <!-- Question/Answer -->
                            <% for(var i=0;i<data.length;i++){ %>
                            <div class="col-lg-5">
                                <div class="faq-question-q-box">Q.</div>
                                <h4 class="faq-question" data-wow-delay=".1s"><%- data[i].question %></h4>
                                <p class="faq-answer mb-4"><%- data[i].answer %></p>
                            </div>
                            <div class="product-action">
                                <a href="javascript: void(0);"  data-id="<%- data[i].id %>" class="btn btn-success btn-xs waves-effect waves-light open_modal"><i class="mdi mdi-pencil"></i></a>
                                <a href="<%-adminpath%>faq/delete/<%= data[i].id %>" onclick="return confirm('Are you sure you want to delete this?');" class="btn btn-danger btn-xs waves-effect waves-light"><i class="mdi mdi-close"></i></a>
                            </div>
                            <% } %>
                        </div>
                        <!-- end row -->
                    </div> <!-- container -->
                </div> <!-- content -->
            </div>

            <!-- ============================================================== -->
            <!-- End Page content -->
            <!-- ============================================================== -->
                
</div>
<!-- Modal -->
<div class="modal fade" id="custom-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h4 class="modal-title" id="myCenterModalLabel">Add New FAQ</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body p-4">
                <form id="addInst" role="form">
                    <div class="form-group">
                        <label for="name">Question</label>
                        <input type="text" class="form-control" id="question" name="question" placeholder="Enter Question">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Answer</label>
                        <input type="text" class="form-control" name="answer" id="answer" placeholder="Enter Answer">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Language</label>
                        <select name="language" class="form-control select2" id="language">
                            <option value="EN" />ENGLISH 
                            <option value="FR" />SPANISH
                       </select>  
                    </div>
                    <div class="text-right">
                        <button type="submit" class="btn btn-success waves-effect waves-light">Save</button>
                    </div>
                </form>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


<div class="modal fade" id="custom-modal-category" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h4 class="modal-title" id="myCenterModalLabel">Add New FAQ</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body p-4">
                <div class="row">
                            
                    <form  role="form" onsubmit="return false"  class="col-md-12"  id="adduser" >
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card-box">
                                                            <!-- end page title --> 
                               <h5 class=" mt-0 mb-3 text-muted bg-light p-2">This will display as highlights in customer application,User will found the speciality of  restaurants through this tags</h5>


                            
                               <div class="row after-add-more mt-2">
                                <div class="form-group  col-md-4 mb-3">
                                    <label for="product-name">Add Category <span class="text-danger">*</span></label>
                                    <input type="text" id="tag" autocomplete="off"  minlength="1" maxlength="100" name="tag" class="form-control" placeholder="Add Tag">
                                </div>
                                <div class="text-center form-group" style="margin-top: 28px;">
                                    <button   type="submit" class='btn w-sm btn-success remove waves-effect waves-light form-control'>+ Add New</button>
                                </div>
                                   
                                    
                             
                            </div>




                                    <% for(var i =0;i<category.length;i++){ %>
                                    <div class="row after-add-more mt-2">
                                        <div class="form-group  col-md-4 mb-3">
                                            <label for="product-name">Tag <%-i+1%> </label>
                                            <input type="text"  value="<%- category[i].catName %>" autocomplete="off"  minlength="1" maxlength="100" class="form-control" placeholder="Add Category">
                                        </div>
                                        
                                            <div class="text-center form-group" style="margin-top: 28px;">
                                                <button  onclick="deleteTag('<%- category[i].id %>')" type="button" class='btn w-sm btn-danger remove waves-effect waves-light form-control'>- Remove</button>
                                            </div>
                                            
                                     
                                    </div>

                                    <% } %>
                                    <div class="newinputs">
                                    </div>
                                    
                                </div> <!-- end card-box -->
                            </div> <!-- end col -->
                            
                        </div>
                        <!-- end row -->

                        <div class="row">
                            <div class="col-12">
                                <div class="text-center mb-3">
                                    <a  onclick="window.history.back()" href="javascript:void(0);:"><button type="button"  class="btn w-sm btn-light waves-effect">Cancel</button></a>
                                </div>
                            </div> <!-- end col -->
                        </div>
                    <!-- end row -->
                    </form>
                </div>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->






<!-- Modal -->
<!-- Modal -->
<div class="modal fade" id="custom-modal-edit" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h4 class="modal-title" id="myCenterModalLabel">Edit FAQs</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body p-4">
                <form id="editInst" role="form">
                    <input type="hidden" class="form-control" id="faqId" name="faqId" placeholder="Enter Heading">
                    <div class="form-group">
                        <label for="name">Question</label>
                        <input type="text" class="form-control" id="questionedit" name="questionedit" placeholder="Enter Question">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Answer</label>
                        <input type="text" class="form-control" name="answeredit" id="answeredit" placeholder="Enter Answer">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Language</label>
                        <select name="languageedit" class="form-control select2" id="languageedit">
                            <option value="EN" />ENGLISH 
                            <option value="FR" />SPANISH
                       </select>  
                    </div>
                    <div class="text-right">
                        <button type="submit" class="btn btn-success waves-effect waves-light">Save</button>
                    </div>
                </form>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

    <!-- END wrapper -->

    <%- include('../partials/script'); -%>
    <%- include('../partials/commonJs'); -%>
<script>
 $(document).on('click','.open_modal',function(){
    var id = $(this).attr("data-id");
    $('#faqId').val(id);
    $.ajax({
        type: 'GET',
        url: '<%-adminpath%>faq/view/'+id,
        dataType: 'json',
        success: function (response) {
            $('#questionedit').val(response.body.question);   
            $('#answeredit').val(response.body.answer); 
            $('select[name^="languageedit"] option[value='+response.body.language+']').attr("selected","selected");  
        }
    });
    $('#custom-modal-edit').modal('show');

});

    $("#editInst").validate({
        rules: {
            questionedit: {
              required: true
            },
            answeredit: {
              required: true
            },
        },
        messages: {
            questionedit: {
                required: "This field is required"
            },
            answeredit: {
                required: "This field is required"
            },
        },
        submitHandler: function (form) {
            $(".overlay").show();
            var tempform = $('#editInst');
            var form_data = new FormData(tempform[0]);
            $(".overlay").show();
            $.ajax({
                type: 'POST',
                url: '<%-adminpath%>faq/update',
                dataType: 'json',
                data: form_data,
                contentType:false,
                cache:false,
                processData:false,
                success: function (response) {
                    $(".overlay").hide();
                    if (response.code == 200) {
                        toastr.success("FAQs updated successfully!");
                        setTimeout(function(){
                           window.location.reload();
                        }, 2000);
                        //showToastSuccess(response.message)
                    } else {
                        setTimeout(function(){
                          toastr.success(response.message);
                        }, 2000);
                    }
                }
            });
        }
        
    });
    $("#addInst").validate({
        rules: {
            question: {
              required: true
            },
            answer: {
              required: true
            },
        },
        messages: {
            question: {
                required: "This field is required"
            },
            instansweruction: {
                required: "This field is required"
            },
        },
        submitHandler: function (form) {
            $(".overlay").show();
            var tempform = $('#addInst');
            var form_data = new FormData(tempform[0]);
            $(".overlay").show();
            $.ajax({
                type: 'POST',
                url: '<%-adminpath%>faq/addFaq',
                dataType: 'json',
                data: form_data,
                contentType:false,
                cache:false,
                processData:false,
                success: function (response) {
                    $(".overlay").hide();
                    if (response.code == 200) {
                        toastr.success("FAQ added successfully!");
                        setTimeout(function(){
                           window.location.reload();
                        }, 2000);
                    } else {
                        
                          toastr.error(response.message);
                        
                    }
                }
            });
        }
    });
</script>
</body>

</html>